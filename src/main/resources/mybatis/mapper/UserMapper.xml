<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="work.darkforest.acowzon.mapper.UserMapper">
    <!--查询所有的用户信息-->
    <select id="queryAllUser" resultType="user">
        select *
        from `user`
    </select>

    <!--根据id查询一个用户信息-->
    <select id="queryUserById" resultType="user">
        select *
        from `user`
        where user_id = #{id}
    </select>

    <!--查询一个用户昵称出现的次数-->
    <select id="queryNicknameCount" resultType="java.lang.Integer">
        select count(*)
        from `user`
        where user_nickname = #{nickname}
    </select>

    <!--初始化一个用户-->
    <insert id="initUser" parameterType="user">
        insert into `user`(user_id, user_nickname, create_time, update_time)
        values (#{userId}, #{userNickname}, #{createTime},#{updateTime})
    </insert>

    <!--插入一个新的用户的信息-->
    <insert id="addUser" parameterType="user">
        insert into `user`
        values (#{userId}, #{userRealname}, #{userNickname}, #{userImage},#{userPhone}, #{userEmail}, #{userSex},
                #{userBirth}, #{userType}, #{userAddressId}, #{createTime},#{updateTime})
    </insert>

    <!--修改一个用户的信息-->
    <update id="updateUser" parameterType="user">
        update `user`
        set user_realname   = #{userRealname},
            user_nickname   = #{userNickname},
            user_image      = #{userImage},
            user_phone      = #{userPhone},
            user_email      = #{userEmail},
            user_sex        = #{userSex},
            user_birth      = #{userBirth},
            update_time     = #{updateTime}
        where user_id = #{userId}
    </update>

    <!--修改一个用户的类型-->
    <update id="updateUserType">
        update `user`
        set user_type = #{userType}
        where user_id = #{id}
    </update>

    <!--修改一个用户的默认地址id-->
    <update id="updateAddressId">
        update `user`
        set user_address_id = #{addressId}
        where user_id = #{id}
    </update>

    <!--删除一个用户-->
    <delete id="delUser">
        delete `user`
        where user_id = #{id}
    </delete>

</mapper>