<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="work.darkforest.acowzon.mapper.UserMapper">
    <!--查询所有的用户信息-->
    <select id="queryAllUser" resultType="user">
        select *
        from `user`
    </select>

    <!--根据d查询一个用户信息-->
    <select id="queryUserById" resultType="user">
        select *
        from `user`
        where user_id = #{id}
    </select>

    <!--插入一个新的用户的信息-->
    <insert id="addUser" parameterType="user">
        insert into `user`
        values (#{userId}, #{userRealname}, #{userNickname}, #{userImage},#{userPhone}, #{userEmail}, #{userSex},
                #{userBirth}, #{userType}, #{userAddressId}, #{createTime},#{updateTime})
    </insert>

    <!--修改一个用户的信息-->
    <update id="updateUser" parameterType="user">
        update `user`
        set user_realname   = #{userRealname},
            user_nickname   = #{userNickname},
            user_image      = #{userImage},
            user_phone      = #{userPhone},
            user_email      = #{userEmail},
            user_sex        = #{userSex},
            user_birth      = #{userBirth},
            user_address_id = #{userAddressId}
            update_time     = #{updateTime}
        where user_id = #{userId}
    </update>

    <!--修改一个用户的类型-->
    <update id="updateUserType">
        update `user`
        set user_type = #{userType}
        where user_id = #{id}
    </update>
</mapper>